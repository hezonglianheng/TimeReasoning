// date: 2025-09-07
// 线性时间情景(顺序)的配置文件，因为顺序情景有一些特殊的命题和规则取用方式

{
    // 规定情景中需要有哪些属性名称及覆写方式
    "attr_names": {}, 
    // 情景中引用rule.json5中的规则，按照rule.json5中的名称进行索引
    "ref_rules": [
        "before_equivalence_after", 
        "BeforeTrans", 
        "AfterTrans", 
    ], 
    // 情景中独有的命题
    "scenario_props": {
        // 将before_1和after_1两种独有命题的模板放置在此处
        "before_1": {
            "templates": {
                "cn": [
                    "{event1:}之前的上一件事是{event2:}",
                ],
                "en": [
                    "{event1:} is immediately after {event2:}",
                ],
            },
        },
        "after_1": {
            "templates": {
                "cn": [
                    "{event1:}之后的下一件事是{event2:}",
                ],
                "en": [
                    "{event1:} is immediately before {event2:}",
                ],
            },
        },
    }, 
    // 情景中独有的规则，按照rule.json5中的方式书写
    "scenario_rules": [
        {
            "name": "get_before_1", // 规则名称, 不能与已有的规则名称重复
            "kind": "rule", // 规则种类，分为relation和rule两类
            // 规则条件, rule类型的规则条件是一个字典列表，每个字
            "condition": [
                {"name": "temporal1", "kind": "temporal", "attrs": ["event", "time", ]},
                {"name": "temporal2", "kind": "temporal", "attrs": ["event", "time", ]},
            ],
            "judge": [
                "temporal1['time'] < temporal2['time']", 
                "represent.time_is_neighbor(temporal1['time'], temporal2['time'])",
            ],
            "conclusion": [
                {
                    "kind": "before_1", 
                    "attrs": {
                        "event1": "temporal1['event']", 
                        "event2": "temporal2['event']",
                        // "diff": "temporal2['time'] - temporal1['time']",
                    }, 
                }, 
            ],
        }, 
        {
            "name": "get_after_1", // 规则名称, 不能与已有的规则名称重复
            "kind": "rule", // 规则种类，分为relation和rule两类
            // 规则条件, rule类型的规则条件是一个字典列表，每个字
            "condition": [
                {"name": "temporal1", "kind": "temporal", "attrs": ["event", "time", ]},
                {"name": "temporal2", "kind": "temporal", "attrs": ["event", "time", ]},
            ],
            "judge": [
                "temporal1['time'] > temporal2['time']", 
                "represent.time_is_neighbor(temporal1['time'], temporal2['time'])",
            ],
            "conclusion": [
                {
                    "kind": "after_1", 
                    "attrs": {
                        "event1": "temporal1['event']", 
                        "event2": "temporal2['event']",
                        // "diff": "temporal1['time'] - temporal2['time']",
                    }, 
                }, 
            ],
        }, 
        {
            // 含义：A在B之前1个 => A在B之前
            "name": "before_1_entail_before",
            "kind": "relation",
            "condition": {"kind": "before_1", "attrs": ["event1", "event2",]},
            "judge": [],
            "conclusion": {"kind": "before", "attrs": ["event1", "event2"]},
            "symmetric": false,
        },
        {
            // 含义：A在B之后1个 => A在B之后
            "name": "after_1_entail_after",
            "kind": "relation",
            "condition": {"kind": "after_1", "attrs": ["event1", "event2",]},
            "judge": [],
            "conclusion": {"kind": "after", "attrs": ["event1", "event2"]},
            "symmetric": false,
        },
        {
            // 含义：A在B之前1个 <=> B在A之后1个
            "name": "before_1_equivalence_after_1",
            "kind": "relation",
            "condition": {"kind": "before_1", "attrs": ["event1", "event2",]},
            "judge": [],
            "conclusion": {"kind": "after_1", "attrs": ["event2", "event1"]},
            "symmetric": true,
        },
    ], 
    // 情景的难度系数
    "level": 0.0, 
    // 07-08新增: 情景类型名称
    "type_name": "线性时间情景", 
}