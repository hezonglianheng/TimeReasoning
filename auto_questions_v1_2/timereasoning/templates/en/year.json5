// 以年为单位的命题陈述模板
// 模板中存在占位符，格式为"[占位符名]"，如"[element]"、"[time]"等
// 占位符与相应命题的属性对应

{
    // 瞬时事件的模板
    "temporal": [
        "[element] in [time]",
    ],
    // 时长的模板
    "duration": [
        "[element] for [duration] year(s)",
        "[element] and spent [duration] year(s) on it",
    ],
    // 持续事件的模板
    "durative": [
        // 描述起点和终点
        "[element] from [time] to [endtime]",
        // 描述起点和持续时间
        "Beginning in [time], [element] for [duration] year(s)",
        "Starting from [time], [element] for [duration] year(s)",
        // 描述终点和持续时间
        // 1-13修改：移除以结束时间和持续时间描述的模板
        // "[element] for [duration] year(s), which ended in [endtime]",
        // "Before ending in [endtime], [element] for [duration] year(s)",
    ],
    // 时频的模板
    "freq": [
        "From [time] to [endtime], [element] once every [frequency] year(s)",
        "Starting from [time], [element] once every [frequency] year(s) for [duration] year(s)",
        "In the [duration] year(s) before [endtime], [element] once every [frequency] year(s)",
    ],
    // 事件先后关系的模板
    "before": [
        "[element1] before [element2]",
    ],
    "before_time": [
        "[element1] [diff] year(s) before [element2]",
    ],
    "after": [
        "[element1] after [element2]",
    ],
    "after_time": [
        "[element1] [diff] year(s) after [element2]",
    ],
    "simultaneous": [
        "In the year that [element2], [element1]",
        "In the same year, [element1], and [element2]",
        "In the same year as [element2], [element1]",
    ],
    // 事件间隔的模板
    "gap_time": [
        "The gap between the time [element1] and the time [element2] is [diff] year(s)",
        "There is a [diff]-year gap between [element1] and [element2]",
    ],
    // 时长关系的模板
    "long": [
        "The time that [element1] takes a longer time than [element2]",
        "[element1] for longer time than [element2]",
        "Compared to the duration that [element2], [element1] for a longer time",
    ],
    "long_time": [
        "[element1] [diff] more year(s) than [element2]",
        "The total duration that [element1] is [diff] year(s) longer than [element2]",
    ],
    "short": [
        "The time that [element1] takes a shorter time than [element2]",
        "[element1] for shorter time than [element2]",
        "Compared to the duration that [element2], [element1] for a shorter time",
    ],
    "short_time": [
        "[element1] [diff] less year(s) than [element2]",
        "The total duration that [element1] is [diff] year(s) shorter than [element2]",
    ],
    "same_len": [
        "The time that [element1] takes the same amount of time that [element2]",
        "The time [element1] is the same length as [element2]",
        "The duration that [element1] is the same as the duration that [element2]",
        "The duration [element1] is equal to the duration [element2]",
        "The duration [element1] matches the duration [element2]",
    ],
    // 增加：during的模板
    "during": [
        "During the time that [element2], [element1]",
        "[element1] during the time [element2]",
    ]
}